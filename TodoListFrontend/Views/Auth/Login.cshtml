@model TodoListFrontend.Models.LoginModel

<div class="container mt-4">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="Login" method="post" class="needs-validation" novalidate>
        <!-- Usuario -->
        <div class="mb-3">
            <label for="username" class="form-label">Usuario:</label>
            <input asp-for="Username" id="username" name="Username" class="form-control" required />
            <div class="invalid-feedback">
                Por favor, ingresa tu nombre de usuario.
            </div>
        </div>

        <!-- Contraseña -->
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña:</label>
            <input asp-for="Password" id="password" name="Password" type="password" class="form-control" required />
            <div class="invalid-feedback">
                Por favor, ingresa tu contraseña.
            </div>
        </div>

        <!-- Botón de inicio de sesión -->
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        </div>
    </form>

    <!-- Link para registrarse -->
    <div class="mt-3 text-center">
        <p>¿No tienes cuenta? <a asp-action="Register" class="text-primary">Regístrate aquí</a></p>
    </div>
</div>

<script>
    // Script para validación personalizada
    (() => {
        'use strict';

        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
