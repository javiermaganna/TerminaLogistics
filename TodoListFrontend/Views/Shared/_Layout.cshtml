<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoListFrontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoListFrontend.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Flex Container -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container-fluid">
                <!-- Brand Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Auth" asp-action="Login">
                    <i class="bi bi-check-circle-fill"></i> TodoListFrontend
                </a>
                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (ViewData["Controller"]?.ToString() == "Tasks" && ViewData["Action"]?.ToString() == "Tasks")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="@Url.Action("Logout", "Auth")">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4 flex-grow-1">
        <!-- Flex-grow para que ocupe el espacio restante -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2024 TodoListFrontend - Todos los derechos reservados.</span>
            <a href="https://link-a-la-documentacion-de-la-api" class="text-light">
                <i class="bi bi-file-earmark-text-fill"></i> Documentación de la API
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
